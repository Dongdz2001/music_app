<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="MissingClass">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/aaaa"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_song" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.398"
        android:layout_marginHorizontal="15dp"

        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@+id/run_time_tv"
        app:layout_constraintEnd_toEndOf="parent"
        >

    </androidx.cardview.widget.CardView>
    <ImageButton
        android:id="@+id/btn_back_5s"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:onClick="Back"
        android:scaleType="fitCenter"
        android:src="@drawable/tua2"
        android:text="down "
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar"
        app:layout_constraintVertical_bias="0.08" />

    <ImageButton
        android:id="@+id/btn_next_5s"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:onClick="Next"
        android:paddingHorizontal="35dp"
        android:scaleType="fitCenter"
        android:src="@drawable/tua1"
        android:text="up"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seekBar"
        app:layout_constraintVertical_bias="0.08"

        />

    <Button
        android:id="@+id/btn_pause"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="#F44336"
        android:onClick="Pause_Music"
        android:text="Pause"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toStartOf="@+id/btn_auto"
        app:layout_constraintHorizontal_bias="0.614"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_auto"
        app:layout_constraintVertical_bias="0" />

    <Button
        android:id="@+id/btn_auto"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="#E479777A"
        android:onClick="Auto_Play"
        android:text="Auto"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_back_5s"
        app:layout_constraintVertical_bias="0.2" />
    <Button
        android:id="@+id/btn_random"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="#E479777A"
        android:onClick="Random"
        android:text="Random"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/btn_auto"
        app:layout_constraintTop_toBottomOf="@+id/btn_auto"
        app:layout_constraintVertical_bias="0.106" />

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="#E91E63"
        android:onClick="Reset"
        android:text="Reset"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/btn_random"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/btn_random"
        app:layout_constraintTop_toBottomOf="@+id/btn_random"
        app:layout_constraintVertical_bias="0.15" />

    <Button
        android:id="@+id/btn_play"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="#FFEB3B"
        android:onClick="Play_Music"
        android:padding="10dp"
        android:text="Play"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@id/btn_auto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/btn_auto"
        app:layout_constraintTop_toBottomOf="@+id/seekBar"
        app:layout_constraintVertical_bias="0.8" />

    <Button
        android:id="@+id/next_song"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="#03A9F4"
        android:onClick="Next_Music"
        android:text="Next"

        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.422"
        app:layout_constraintStart_toEndOf="@+id/btn_auto"
        app:layout_constraintTop_toTopOf="@id/btn_auto"
        app:layout_constraintVertical_bias="0" />

    <ImageView
        android:id="@+id/image_song"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/keobonggon"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/seekBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/run_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="60px"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar"
        app:layout_constraintBottom_toTopOf="@+id/btn_back_5s"
        app:layout_constraintStart_toStartOf="@+id/seekBar"
        />
    <TextView
        android:id="@+id/getDuration_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="50px"
        app:layout_constraintEnd_toEndOf="@+id/seekBar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar"
        app:layout_constraintBottom_toTopOf="@+id/btn_back_5s"
        app:layout_constraintHorizontal_bias="0.95"

        />

</androidx.constraintlayout.widget.ConstraintLayout>